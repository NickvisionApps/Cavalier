<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>io.github.fsobolev.Cavalier.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>Cavalier</name>
  <summary>Audio visualizer based on CAVA.</summary>
  <description>
    <p>Cavalier is an audio visualizer based on CAVA with customizable LibAdwaita interface.</p>
    <ul>
      <li>4 drawing modes!</li>
      <li>Set single color or up to 10 colors gradient for background and foreground.</li>
      <li>Configure smoothing, noise reduction and a few other CAVA settings.</li>
    </ul>
  </description>
  <launchable type="desktop-id">io.github.fsobolev.Cavalier.desktop</launchable>
  <url type="homepage">https://github.com/fsobolev/CavalierNext</url>
  <url type="bugtracker">https://github.com/fsobolev/CavalierNext/issues</url>
  <developer_name>Nickvision</developer_name>
